{
	"name": "pixelant/pxa-data-provider",
	"type": "typo3-cms-extension",
	"description": "Configurable data provider for easy data sharing with external scripts such as Google Tag Manager.",
	"license": ["GPL-2.0+"],
	"keywords": ["TYPO3 CMS"],
	"authors": [
		{
			"name": "Pixelant",
			"email": "info@pixelant.net",
			"homepage": "https://www.pixelant.net",
			"role": "Developer"
		}
	],
	"require": {
		"typo3/cms-core": "^8.7 || ^9.5",
		"php": "^7.2"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3.3",
		"nimut/testing-framework": "^4.0"
	},
	"replace": {
		"pxa_data_provider": "self.version",
		"typo3-ter/pxa-data-provider": "self.version"
	},
	"autoload": {
		"psr-4": {
			"Pixelant\\PxaDataProvider\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Pixelant\\PxaDataProvider\\Tests\\": "Tests/"
		}
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin"
	},
	"scripts": {
		"post-autoload-dump": [
			"mkdir -p .Build/Web/typo3conf/ext/",
			"[ -L .Build/Web/typo3conf/ext/pxa_data_provider ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/pxa_data_provider"
		]
	},
	"extra": {
		"branch-alias": {
			"dev-master": "0.0.x-dev"
		},
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms",
			"web-dir": ".Build/Web"
		}
	}
}
